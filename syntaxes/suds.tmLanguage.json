{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "SUDS",
	"patterns": [
		{
			"include": "#headers"
		},
		{
			"include": "#commands"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#symbols"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#labels"
		},
		{
			"include": "#markup"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#choices"
		}
	],
	"repository": {
		"headers": {
			"patterns": [{
				"name": "entity.other.attribute-name",
				"match": "^===\\s*$"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.suds",
				"begin": "\\[(if|else|elseif|endif|set|event)\\b",
				"end": "\\]",
				"patterns": [
					{
						"include": "#operators"
					},
					{
						"include": "#symbols"
					},
					{
						"include": "#params"
					},
					{
						"include": "#numbers"
					},
					{
						"include": "#strings"
					},
					{
						"include": "#names"
					},
					{
						"include": "#constants"
					},
					{
						"include": "#variables"
					},
					{
						"name": "variable.language.suds",
						"match": "\\b\\S+\\b"
					}

				]
			},
			{
				"name": "keyword.control.suds",
				"begin": "\\[(goto|go to)\\b",
				"end": "\\]",
				"patterns": [
					{
						"name": "storage.type.class.suds",
						"match": "\\b\\S+\\b"
					}

				]

			},
			{
				"name": "keyword.other.suds",
				"match": "^\\s*(\\S+)\\:"

			},
			{
				"name": "keyword.type.suds",
				"match": "\\b(string|int|float|bool)\\b"

			}]
		},
		"constants":{
			"patterns": [
			{
				"name": "constant.language.suds",
				"match": "\\b([tT]rue|[fF]alse|[mM]asculine|[fF]eminine|[nN]euter)\\b"

			}
			]
		},
		"strings": {
			"name": "string.quoted.double.suds",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.suds",
					"match": "\\\\."
				}
			]
		},
		"names": {
			"name": "constant.other",
			"begin": "`",
			"end": "`",
			"patterns": [
				{
					"name": "constant.character.escape.suds",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [{
				"name": "constant.numeric",
				"match": "\\d+(\\.\\d+)?"
			}]
		},
		"operators":{
			"patterns": [
				{
					"name": "keyword.operator",
					"match": "[\\+\\/\\-\\*\\!]"
				},
				{
					"name": "keyword.operator",
					"match": "\\b(and|or|&&|\\|\\||not)\\b"
				}
			]
		},
		"symbols": {
			"patterns": [
			{
				"name": "keyword.control",
				"match": "[\\[\\]]"
			}]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.suds",
				"begin": "^\\s*#",
				"end": "$"
			},
			{
				"name": "comment.block.lineId.suds",
				"match": "\\@[0-9a-fA-F]+\\@"
			}]
		},
		"labels": {
			"patterns": [{
				"name": "storage.type.class.suds",
				"begin": "^\\s*:",
				"end": "$"
			}]
		},
		"choices": {
			"patterns": [{
				"name": "entity.name.function.suds",
				"match": "^\\s*\\*\\s+[^\\@]+"
			}]
		},
		"variables":{
			"patterns": [
				{
					"name": "variable.language.suds",
					"match": "\\{\\w+}(\\|(plural|gender)\\(.*\\))?"
				}
			]
		},
		"markup": {
			"patterns": [
			{
				"name": "variable.parameter.suds",
				"match": "\\<(\\w+|\\/)\\>"
			}]
		}


	},
	"scopeName": "source.sud"
}