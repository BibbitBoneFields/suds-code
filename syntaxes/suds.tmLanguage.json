{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "SUDS",
	"patterns": [
		{
			"include": "#headers"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#symbols"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#labels"
		},
		{
			"include": "#params"
		},
		{
			"include": "#choices"
		}
	],
	"repository": {
		"headers": {
			"patterns": [{
				"name": "entity.other.attribute-name",
				"match": "^===\\s*$"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.suds",
				"match": "\\[(if|else|elseif|endif|goto|go to|set|event)\\b"
			},
			{
				"name": "keyword.other.suds",
				"match": "^\\W*(\\w+)\\:"

			},
			{
				"name": "keyword.type.suds",
				"match": "\\b(string|int|float|bool)\\b"

			},
			{
				"name": "constant.language.suds",
				"match": "\\b([tT]rue|[fF]alse|[mM]asculine|[fF]eminine|[nN]euter)\\b"

			}]
		},
		"strings": {
			"name": "string.quoted.double.suds",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.suds",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [{
				"name": "constant.numeric",
				"match": "\\d+(\\.\\d+)?"
			}]
		},
		"symbols": {
			"patterns": [{
				"name": "keyword.operator",
				"match": "[\\+\\/\\-\\*\\!]"
			},
			{
				"name": "keyword.operator",
				"match": "(and|or|&&|\\|\\||not)"
			},
			{
				"name": "keyword.control",
				"match": "[\\[\\]]"
			}]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.suds",
				"begin": "^\\s*#",
				"end": "$"
			},
			{
				"name": "comment.block.lineId.suds",
				"match": "\\@[0-9a-fA-F]+\\@"
			}]
		},
		"labels": {
			"patterns": [{
				"name": "storage.type.class.suds",
				"begin": "^\\s*:",
				"end": "$"
			}]
		},
		"choices": {
			"patterns": [{
				"name": "entity.name.function.suds",
				"match": "^\\s*\\*\\s+[^\\@]+"
			}]
		},
		"params": {
			"patterns": [{
				"name": "variable.language.suds",
				"match": "\\{\\w+}(\\|(plural|gender)\\(.*\\))?"
			},
			{
				"name": "variable.parameter.suds",
				"match": "\\<(\\w+|\\/)\\>"
			}]
		}


	},
	"scopeName": "source.sud"
}